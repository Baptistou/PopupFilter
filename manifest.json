{
	"manifest_version": 2,
	"name": "PopupFilter",
	"version": "1.1",
	"author": "Baptiste Th√©mine",
	
	"description": "Prevents intempestive opening of popups from website scripts.",
	
	"permissions": [
		"webNavigation",
		"webRequest",
		"<all_urls>",
		"storage",
		"tabs"
	],
	
	"icons": {
		"48": "images/logo.png"
	},
	
	"background": {
		"scripts": ["script.js"]
	},
	
	"browser_action": {
		"default_title": "PopupFilter",
		"default_icon": "images/logo.png",
		"default_popup": "popup/index.html",
		"browser_style": true
	}
}